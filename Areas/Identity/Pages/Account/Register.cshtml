@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<body style="background-color: #4A6267;">
<div class="row justify-content-center" style="margin-top: 20px;">
        <div class="col-md-4 p-4 rounded" style="background-color: #5F7E85;">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" style="background-color: #5F7E85;" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" style="background-color: #5F7E85;" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" style="background-color: #5F7E85;" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg gray-btn">Register</button>
        </form>
    </div>
</div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
